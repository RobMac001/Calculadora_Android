<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|right"
    android:background="#FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/label_resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="bottom|right"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.40"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_pre_resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_resultado" />

    <Button
        android:id="@+id/boton_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="2"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_1"
        app:layout_constraintTop_toTopOf="@+id/boton_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="6"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_5"
        app:layout_constraintTop_toTopOf="@+id/boton_5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_mult"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="x"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_9"
        app:layout_constraintTop_toTopOf="@+id/boton_9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="8"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_7"
        app:layout_constraintTop_toTopOf="@+id/boton_7"
        app:layout_constraintWidth_percent="0.25"
        tools:text="8" />

    <Button
        android:id="@+id/boton_cc"
        style="@android:style/Widget.Button.Small"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="c"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_pre_resultado"
        app:layout_constraintWidth_percent="0.25"
        app:rippleColor="#A84040" />

    <Button
        android:id="@+id/boton_goma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="@string/label_borrar"
        android:textColor="#FF5722"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_cc"
        app:layout_constraintTop_toTopOf="@+id/boton_cc"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_porcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:background="@color/white"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_goma"
        app:layout_constraintTop_toTopOf="@+id/boton_goma"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_div"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_division"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_porcentaje"
        app:layout_constraintTop_toTopOf="@+id/boton_porcentaje"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="7"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_cc"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="9"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_8"
        app:layout_constraintTop_toTopOf="@+id/boton_8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="4"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:background="@color/white"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_4"
        app:layout_constraintTop_toTopOf="@+id/boton_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_resta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:background="@color/white"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_6"
        app:layout_constraintTop_toTopOf="@+id/boton_6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="1"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_suma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textColor="#FF5722"
        android:background="@color/white"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_3"
        app:layout_constraintTop_toTopOf="@+id/boton_3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_3"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="0dp"
        android:text="3"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_2"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_r"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="0dp"
        android:checkable="false"
        android:clickable="false"
        android:text="r"
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:background="@color/white"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_r"
        app:layout_constraintTop_toTopOf="@+id/boton_r"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_punto"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_0"
        app:layout_constraintTop_toTopOf="@+id/boton_0"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/boton_igual"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:text="="
        android:textColor="#FF5722"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/boton_punto"
        app:layout_constraintTop_toTopOf="@+id/boton_punto"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>